<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.passwordprotector.EditActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Account Name"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/newAccountNameBox"
        android:layout_alignStart="@+id/newAccountNameBox"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/newAccountNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Account Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="33dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="76dp"
        android:layout_below="@+id/newAccountNameBox"
        android:layout_alignLeft="@+id/capLetterBox"
        android:layout_alignStart="@+id/capLetterBox"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/passwordLengthBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password Length"
        android:inputType="number"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="93dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/specCharBox"
        android:layout_alignEnd="@+id/specCharBox" />

    <CheckBox
        android:id="@+id/numBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numbers"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="136dp"
        android:layout_alignBaseline="@+id/capLetterBox"
        android:layout_alignBottom="@+id/capLetterBox"
        android:layout_alignRight="@+id/answer1Text"
        android:layout_alignEnd="@+id/answer1Text" />

    <CheckBox
        android:id="@+id/specCharBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Characters (ie. !,@,#)"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="168dp"
        android:layout_below="@+id/numBox"
        android:layout_alignLeft="@+id/capLetterBox"
        android:layout_alignStart="@+id/capLetterBox" />

    <CheckBox
        android:id="@+id/capLetterBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital Letters"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="136dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/passwordLengthBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Security Answers"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="212dp"
        android:layout_below="@+id/specCharBox"
        android:layout_alignLeft="@+id/passwordLengthBox"
        android:layout_alignStart="@+id/passwordLengthBox"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 1:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="238dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/specCharBox"
        android:layout_alignStart="@+id/specCharBox" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 2:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_below="@+id/answer1Text"
        android:layout_alignLeft="@+id/answer1Text"
        android:layout_alignStart="@+id/answer1Text" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 3:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="358dp"
        android:layout_below="@+id/answer2Text"
        android:layout_alignLeft="@+id/answer2Text"
        android:layout_alignStart="@+id/answer2Text" />

    <EditText
        android:id="@+id/answer1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="255dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:id="@+id/answer2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="315dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <EditText
        android:id="@+id/answer3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="375dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveButtonClicked"
        android:text="Save"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="433dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
