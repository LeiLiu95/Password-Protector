<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.passwordprotector.EditActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Account Name"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/newAccountNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Account Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="76dp" />

    <EditText
        android:id="@+id/passwordLengthBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password Length"
        android:inputType="number"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="93dp" />

    <CheckBox
        android:id="@+id/numBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numbers"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="136dp" />

    <CheckBox
        android:id="@+id/specCharBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Characters (ie. !,@,#)"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="168dp" />

    <CheckBox
        android:id="@+id/capLetterBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital Letters"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Security Answers"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 1:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 2:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="298dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 3:"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="358dp" />

    <EditText
        android:id="@+id/answer1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/answer2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="315dp" />

    <EditText
        android:id="@+id/answer3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveButtonClicked"
        android:text="Save"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="433dp" />

</android.support.constraint.ConstraintLayout>
